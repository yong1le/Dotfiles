syntax on
set nu
set relativenumber
set noswapfile
set nobackup
set nowritebackup
set tabline=2
set noshowmode
set hidden
set cursorline
set termguicolors
set noerrorbells
set splitbelow
set splitright
set smartcase
set ignorecase
set autoindent
set smartindent
set conceallevel=0

set tabstop=2
set softtabstop=2
set shiftwidth=2

set scrolloff=15
set sidescrolloff=15
set clipboard=unnamedplus
set mouse=a
set timeoutlen=1000
set updatetime=300

inoremap jk <ESC>
